<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource global="jdbc/my_db"
                name="jdbc/my_db"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="100" maxIdle="30" maxWaitMillis="10000"
              username="root" password="root"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/my_db?useUnicode=yes&amp;characterEncoding=UTF-8"/>

<Resource global="jdbc/test_db"
          name="jdbc/test_db"
          auth="Container"
          type="javax.sql.DataSource"
          maxTotal="100" maxIdle="30" maxWaitMillis="10000"
          username="root" password="root"
          driverClassName="com.mysql.cj.jdbc.Driver"
          url="jdbc:mysql://localhost:3306/test_db?useUnicode=yes&amp;characterEncoding=UTF-8"/>
</Context>